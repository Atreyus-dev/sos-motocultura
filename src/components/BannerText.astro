---
interface Props {
    src:string;
    alt:string;
    h1:string;
    p:string;
    href_1:string;
    href_2:string;
    a_1:string;
    a_2:string;
}

const {src, alt, h1, p, href_1, href_2, a_1, a_2}=Astro.props;
---
<section>
    <img src={src} alt={alt}>
    <div class="card-info">
        <h1>{h1}</h1>
        <p>{p}</p>
        <div class="cta-buttons">
            <a href={href_1}>{a_1}</a>
            <a href={href_2}>{a_2}</a>
        </div>
    </div>
</section>

<style>
    section{
        width: 100%;
        height: auto;
        position: relative;
    }

    img{
        width: 100%;
        height: 100%;
        object-fit: cover;
        margin:0;
        padding: 0;
    }

    .card-info{
        width: 60%;
        height: auto;
        background-color: rgba(0, 0, 0, 0.411);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        position: absolute;
        inset: 0;
        margin: auto;
        padding: 0 1rem;
    }

    h1{
        color: white;
        font-size: clamp(1px, 4vw + 1px, 2.5rem);
    }

    p{
        color: whitesmoke;
        font-size: clamp(1px, 2vw + 1px, 1.5rem);;
    }

    .cta-buttons{
        width: 100%;
        display: flex;
        flex-direction: row;
        justify-content: center;
        flex-grow: 0;
    }

    a{
        text-decoration: none;
        color:white;
        background-color: var(--c_detalles);
        font-size: clamp(1px, 3vw + 1px, 1.5rem);
        padding:.5rem;
        margin: .5rem;
        display: inline-block;
        border-radius: 5px;
        transition: all .3s ease;
    }

    a:last-child{
        background-color: transparent;
        border: 1px solid rgba(245, 245, 245, 0.61);
    }

    a:hover{
        background-color: var(--c_enfasis);
        scale: 1.1;
        box-shadow: 0 4px 10px black;
    }

    @media screen and (min-width:767px) {
        .card-info{
        width: 40%;
        right: unset;
    }
        .cta-buttons{
            justify-content: start;
        }
    }
</style>