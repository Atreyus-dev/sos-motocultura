---
interface Props {
    
    src:string;
    alt:string;
    h3:string;
    p:string;
}

const {src, alt, h3, p}=Astro.props;
---
<div class="card">
    <img src={src} alt={alt}>
    <h3>{h3}</h3>
    <p>{p}</p>
</div>

<style>
    .card{
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 300px;
        box-shadow: 0 0 10px black;
    }

    h3{
        font-size: 1.5rem;
        color: var(--c_enfasis);
    }

    p{
        text-align: center;
        color: var(--c_fondo);
        font-size: large;
        margin: 10px;
        text-wrap: pretty;
    }

    img{
        aspect-ratio: 16/9;
        width: 100%;
        object-fit: cover;
    }
</style>